{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.2.2"
  },
  "scripts": {
    "build": "hexo generate",
    "prebuild": "npm run build:theme",
    "postinstall": "npm run install:theme:npm && npm run install:theme:bower",
    "install:theme:npm": "cd themes/tranquilpeak && npm install",
    "install:theme:bower": "cd themes/tranquilpeak && bower install",
    "build:theme": "cd themes/tranquilpeak && grunt buildProd",
    "start": "hexo server",
    "server": "npm run server:dev",
    "server:dev": "hexo server",
    "server:prod": "hexo server --static"
  },
  "dependencies": {
    "hexo": "^3.2.0",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.0",
    "hexo-generator-index": "^0.2.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.2.0",
    "hexo-renderer-markdown-it": "^3.4.1",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.2.0"
  },
  "devDependencies": {
    "grunt": "^1.0.1",
    "bower": "^1.8.0"
  }
}
